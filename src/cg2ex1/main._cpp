void main_reshape(int width,  int height) {
	glViewport(0, 0, width, height);

	glMatrixMode(GL_PROJECTION);
	glLoadIdentity();
	gluOrtho2D(0, width, height, 0);

	glMatrixMode(GL_MODELVIEW);
	glLoadIdentity();

	_win_w = (width - 4*_win_gap) / 3.0;
	_win_h = height - 2*_win_gap;

